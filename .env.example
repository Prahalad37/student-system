# Copy this file to .env and fill in your values.
# Never commit .env to version control.

# Required in production. Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Set to True for local development, False for production
DEBUG=False

# --- SaaS Deployment (Option A) ---
# Your domain + wildcard for subdomains (e.g. schoolsoft.in,.schoolsoft.in)
# ALLOWED_HOST=schoolsoft.in,.schoolsoft.in

# CSRF trusted origins - add each subdomain you use
# CSRF_TRUSTED_ORIGINS=https://schoolsoft.in,https://abc.schoolsoft.in

# PostgreSQL for production (leave empty for SQLite in dev)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Optional: Override default (mysite.settings)
# DJANGO_SETTINGS_MODULE=mysite.settings
